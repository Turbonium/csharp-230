@model HelloWorld.Models.GuestResponse
<head> <!--exercise to add bootstrap style on this form-->
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>
@{
    Layout = null;
}

<html>
<body>
    <h4 class="panel-heading text-center">Please RSVP</h4>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>Name: @Html.TextBoxFor(t => t.Name, new { @class = "form-control", maxlength = 30, style = "width:200px;" })</p>
        <!--exercise to add email-->
        <p>Email: @Html.TextBoxFor(t => t.Email, new { @class = "form-control", maxlength = 50, style = "width:300px;" })</p> 
        <p>Phone: @Html.TextBoxFor(t => t.Phone, new { @class = "form-control", maxlength = 15, style = "width:150px;" })</p>
        <p>
            Will Attend: @Html.DropDownListFor(t => t.WillAttend, new[]
      {
        new SelectListItem { Text="Yes, I'll be there", Value=bool.TrueString},
        new SelectListItem{Text="No, I can't come", Value=bool.FalseString},
      }, "Choose an option")
        </p>
        <input class="btn btn-success" type="submit" value="Submit RSVP" />
    }
</body>
</html>